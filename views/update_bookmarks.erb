    <input type="hidden" name="_method" value="PATCH" />
    <input type="text" name="url_to_change" value="<%=@bookmark.url%>"/>
    <input type="text" name="title_to_change" value="<%=@bookmark.title%>"/>
    <input type="submit" value="Submit"/>
</form>
